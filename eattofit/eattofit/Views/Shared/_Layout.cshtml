<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>EatToFit</title>

    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/Style.css" rel="stylesheet" />
</head>
<body>

    <div id="header">
        <h1><a style="color:#228B22 ">EatToFit</a></h1>
        <h2>
            <a onclick="Index">Nosso melhor para o seu melhor</a>
        </h2>

        @if (Session["IdFornecedor"] != null)
        {

            <h2 style="text-align:left; margin-left:60px;">Olá :) @Session["Email"].ToString()</h2>



        }

    </div>




    <div class="container body-content">
        @RenderBody()
        <hr />

        <div id="footer" style="color:#8B4726">
            <p>
                &copy; @DateTime.Now.Year - EatToFit
                <strong>
                    Contate-nos
                </strong>
            </p>
        </div>


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
